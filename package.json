{
  "name": "trusted-clawmon",
  "version": "0.1.0",
  "description": "Curated, attack-resistant, crypto-economically secured registry overlay for MCP skills",
  "type": "module",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc",
    "build:all": "tsc && cd dashboard && npm install && npm run build",
    "dev": "tsx watch src/server.ts",
    "dev:server": "tsx src/server.ts",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:all": "npm run dev:server & cd dashboard && npm run dev",
    "start": "node dist/src/server.js",
    "setup": "tsx scripts/setup-monad.ts",
    "seed": "tsx scripts/seed-phase1.ts",
    "seed:quick": "tsx scripts/seed-phase1.ts --quick",
    "seed:live": "tsx scripts/seed-clawmon-data.ts",
    "seed:live:registry": "tsx scripts/seed-clawmon-data.ts --registry",
    "seed:live:dry": "tsx scripts/seed-clawmon-data.ts --dry-run",
    "seed:live:events": "tsx scripts/seed-clawmon-data.ts --events",
    "test:scoring": "tsx scripts/test-scoring.ts",
    "test:staking": "npx hardhat test --config hardhat.config.cjs",
    "test:messagelog": "npx hardhat test test/MessageLog.test.cjs --config hardhat.config.cjs",
    "compile:contracts": "npx hardhat compile --config hardhat.config.cjs",
    "deploy:staking": "npx hardhat run scripts/deploy/deploy-staking.cjs --network monad --config hardhat.config.cjs",
    "deploy:staking:local": "npx hardhat run scripts/deploy/deploy-staking.cjs --config hardhat.config.cjs",
    "deploy:attestation": "npx hardhat run scripts/deploy/deploy-attestation.cjs --network monad --config hardhat.config.cjs",
    "deploy:attestation:local": "npx hardhat run scripts/deploy/deploy-attestation.cjs --config hardhat.config.cjs",
    "test:attestation": "npx hardhat test test/AttestationRegistry.test.cjs --config hardhat.config.cjs",
    "deploy:paywall": "npx hardhat run scripts/deploy/deploy-paywall.cjs --network monad --config hardhat.config.cjs",
    "deploy:paywall:local": "npx hardhat run scripts/deploy/deploy-paywall.cjs --config hardhat.config.cjs",
    "test:paywall": "npx hardhat test test/SkillPaywall.test.cjs --config hardhat.config.cjs",
    "deploy:insurance": "npx hardhat run scripts/deploy/deploy-insurance.cjs --network monad --config hardhat.config.cjs",
    "deploy:insurance:local": "npx hardhat run scripts/deploy/deploy-insurance.cjs --config hardhat.config.cjs",
    "test:insurance": "npx hardhat test test/InsurancePool.test.cjs --config hardhat.config.cjs",
    "deploy:governance": "npx hardhat run scripts/deploy/deploy-governance.cjs --network monad --config hardhat.config.cjs",
    "deploy:governance:local": "npx hardhat run scripts/deploy/deploy-governance.cjs --config hardhat.config.cjs",
    "test:governance": "npx hardhat test test/Governance.test.cjs --config hardhat.config.cjs",
    "test:tee": "tsx scripts/test-tee.ts",
    "test:websocket": "tsx scripts/test-websocket.ts",
    "demo:realtime": "tsx scripts/demo-realtime.ts",
    "demo:realtime:fast": "tsx scripts/demo-realtime.ts --fast",
    "demo:realtime:burst": "tsx scripts/demo-realtime.ts --burst",
    "lint": "tsc --noEmit",
    "validate": "bash scripts/validate-env.sh",
    "validate:demo": "bash scripts/validate-env.sh --demo",
    "demo": "DEMO_MODE=true npm run dev:all",
    "setup:demo": "bash scripts/setup.sh --demo",
    "setup:full": "bash scripts/setup.sh",
    "setup:demo:start": "bash scripts/setup.sh --demo --start",
    "dashboard:install": "cd dashboard && npm install",
    "dashboard:build": "cd dashboard && npm run build"
  },
  "keywords": [
    "monad",
    "erc-8004",
    "trust",
    "reputation",
    "mcp"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/ws": "^8.18.1",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "ethers": "^6.16.0",
    "express": "^5.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.28.6"
  }
}
