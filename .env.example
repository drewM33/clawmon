# Monad Testnet Credentials
# Set MONAD_SYNC_ENABLED=true to read skills/feedback from on-chain contracts
MONAD_SYNC_ENABLED=false
# Get testnet MON from the Monad faucet
MONAD_RPC_URL=https://testnet.monad.xyz/v1
MONAD_PRIVATE_KEY=

# MessageLog Contract Address (created by `npm run setup`)
MESSAGELOG_CONTRACT_ADDRESS=

# Server
PORT=3001

# CORS — allowed origins for the dashboard in production (comma-separated)
# Leave empty for development (allows all origins).
# Example: https://trusted-clawmon.vercel.app,https://clawmon.io
CORS_ORIGIN=

# Staking Contract (Phase 4 — deployed via `npx hardhat run scripts/deploy/deploy-staking.cjs --network monad`)
# Leave empty to use simulated staking data for local development
STAKING_CONTRACT_ADDRESS=
DEPLOYER_PRIVATE_KEY=

# Attestation Registry (Phase 5 — deployed via `npx hardhat run scripts/deploy/deploy-attestation.cjs --network monad`)
# Leave empty to use simulated attestation data for local development
# The DEPLOYER_PRIVATE_KEY above is also used as the attester key
ATTESTATION_CONTRACT_ADDRESS=

# Insurance Pool (Phase 6 — deployed via `npx hardhat run scripts/deploy/deploy-insurance.cjs --network monad`)
# Leave empty to use simulated insurance data for local development
INSURANCE_CONTRACT_ADDRESS=

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
# Used for WalletConnect v2 / MetaMask in the dashboard
VITE_WALLETCONNECT_PROJECT_ID=

# ClawHub Live Sync
# Set to 'true' to fetch skills from the ClawHub registry at startup and periodically.
# Requires the `clawhub` CLI (npm i -g clawhub).
CLAWHUB_SYNC_ENABLED=false
# Sync interval in milliseconds (default: 21600000 = 6 hours)
CLAWHUB_SYNC_INTERVAL=21600000

# ERC-8004 Integration
# Deployed IdentityRegistry and ReputationRegistry on Monad testnet.
# These are the official ERC-8004 contract addresses — do not change unless
# targeting a different chain or deployment.
# Set ERC8004_USE_MAINNET=true to use Monad mainnet addresses instead.
ERC8004_USE_MAINNET=false

# Clawhub Boost (Stake + Slash) — deployed via npm run deploy:stake-slash
SKILL_REGISTRY_ADDRESS=
STAKE_ESCROW_ADDRESS=
SLASHING_MANAGER_ADDRESS=

# x402 Payment Protocol (Path B — native MON settlement)
# The SkillPaywall contract address on Monad for x402 payment settlement.
# Deployed via: npx hardhat run scripts/deploy/deploy-paywall.cjs --network monad
PAYWALL_CONTRACT_ADDRESS=
# Monad chain ID (testnet: 10143)
MONAD_CHAIN_ID=10143

# x402 Protocol Paywall (Coinbase x402 — USDC on Base Sepolia)
# Wallet address that receives USDC payments via the x402 protocol.
X402_PAY_TO=0x3e4A16256813D232F25F5b01c49E95ceaD44d7Ed
# CAIP-2 network identifier (Base Sepolia testnet: eip155:84532, Base mainnet: eip155:8453)
X402_NETWORK=eip155:84532
# Facilitator URL (testnet: https://x402.org/facilitator)
X402_FACILITATOR_URL=https://x402.org/facilitator
# Price per request in USD (e.g., $0.001 = 0.1 cents)
X402_PRICE=$0.001
